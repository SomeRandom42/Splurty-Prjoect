<!DOCTYPE html>
<html>
  <head>
    <title>Splurty</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="row">
      <div class="col-3">
       <%= link_to root_path, class: 'logo' do %>
       <div class="circle">
        <br />
        MTG
        <br />
        Such MEME
        <br />
        RTFC
      </div>
      <% end %>
      
      </div>
      
      <div class="col col-sm-4 hidden-xs-down slogan">
        Random Magic the Gathering Quotes for reasons.
      </div>
      <div class="col-10 offset-1 offset-sm-0 col-sm-5 links">
        <%= link_to 'Contribute', '#', data: {toggle: 'modal', target: '#myModal'} %>
        &nbsp;&nbsp;
        <%= link_to 'About', about_path %>
        
      </div>
    </header>



    
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">Ã—</span>
            </button>
            <h4 class="modal-title" id="myModalLabel">Contribute Your Quote</h4>
          </div>
          <div class="modal-body">
      <%= simple_form_for Quote.new do |f| %>
        <div class="modal-body">
          <%= f.input :saying, label: "What is the saying you want to add?", placeholder: "I am taking the one land gamble." %>
         
          <%= f.input :author, label: "Who is the author of the quote?", placeholder: "Some one who is about to lose" %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <br />         
          <%= f.submit 'Create', class: 'btn btn-danger' %>
        </div>
      <% end %>
          </div>
        </div>
      </div>
    </div>    
    
    
    
    
    <hr />
    <br class="clear"/>
    
    <div class="container">
  <% if flash[:error].present? %>
    <div class="col-10 offset-1 alert alert-danger">
      <%= flash[:error].html_safe %>
    </div>
  <% end %>
   
</div>
    
    
    
    <%= yield %>
    <div class="footer">
      <div class="row">
       <div class="col-12 col-sm-6">        
         <%= link_to "This isn't enough, I need more", root_path, class: 'next-quote' %>
       </div>
       <div class="col-12 col-sm-6 footer-blurb">
          Proudly made in Santa Fe Springs, CA by Patrick Lewis
       </div>
      </div>
    </div>
  </body>
</html>
